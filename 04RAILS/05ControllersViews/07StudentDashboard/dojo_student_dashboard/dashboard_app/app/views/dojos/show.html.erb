<p id="notice"><%= notice %></p>
<p>
<h1><%= @dojo.city %> Dojo</h1>
<br>
  <strong>Branch:</strong>
  <%= @dojo.branch %>
</p>

<p>
  <strong>Street:</strong>
  <%= @dojo.street %>
</p>

<p>
  <strong>City:</strong>
  <%= @dojo.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @dojo.state %>
</p>
<fieldset>
  <legend><h3>Students for <%= @dojo.city %></h3></legend>

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th col=3>Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @dojo.students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td col=3>
          <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a> | <%= link_to 'Delete', [student.dojo, student], :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>

    <% end %>

  
    </tbody>
  </table>
  <a href="/dojos/<%= @dojo.id %>/students/new">New Student</a>
</fieldset>
<br><br>
<%= link_to 'Edit', edit_dojo_path(@dojo) %> | <%= link_to 'Back', dojos_path %> 
