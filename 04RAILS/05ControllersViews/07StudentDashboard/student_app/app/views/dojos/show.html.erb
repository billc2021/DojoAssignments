<p id="notice"><%= notice %></p>

<p>
  <strong>Branch:</strong>
  <%= @dojo.branch %>
</p>

<p>
  <strong>Street:</strong>
  <%= @dojo.street %>
</p>

<p>
  <strong>City:</strong>
  <%= @dojo.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @dojo.state %>
</p>

<h2>Student Roster</h2>
<% @dojo.students.each do |student| %>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td>
          <a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>">Show</a> | 
          <a href="#">Edit</a> | 
          <a href="#">Delete</a>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<br>
<%= link_to 'Edit', edit_dojo_path(@dojo) %> |
<%= link_to 'Back', dojos_path %>
